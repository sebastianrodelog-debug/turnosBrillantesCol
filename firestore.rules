rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow users to read/write their own business data
    match /businesses/{businessId} {
      allow read: if isAuthenticated(); // Broad read for now to simplify fetching
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // Allow access to appointments (refine this later for specific business logic)
    match /appointments/{appointmentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
